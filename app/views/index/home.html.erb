<div class="home-slider-wrapper">
	<div id="home-slider" class="home-slider">
		<% @sliders.each do |slide| %>
			<div class="slide">
				<%= image_tag slide.image(:normal) %>
				<div class="home-slider-overlay"></div>
				<div class="home-slider-content">
		  			<h6><%= slide.title %></h6>
					<span><%= slide.subtitle %></span>
					<% if slide.url? %>
						<% if slide.buttontitle? %>
                            <%= link_to slide.buttontitle, slider.url  %>
                        <% else %>
                            <%= link_to slide.url, slide.url  %>
                        <% end %>
					<% end %>
		  		</div>
			</div>
		<% end %>
	</div>
    <% if current_user && current_user.admin? %>
        <%= link_to sliders_path, :class => 'edit-slider' do %>
            <i class="fa fa-edit" data-toggle="tooltip" data-placement="bottom" title="Editar slider"></i>
        <% end %>
    <% end %>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-head">
              <h1>Adóptanos</h1>
              <hr class="hr">
              <h3>Estas son algunas de las mascotas en adopción</h3>
            </div>	
        </div>
    </div>
</div>

<% if @pets && @pets.count > 4 %>
  <div id="masonry-container" class="transitions-enabled infinite-scroll clearfix masonry-width home-gallery">
    <% @pets.each do |pet| %>
        <div class="box home-gallery-image">
            <%= link_to pet_path(pet) do %>
                <div class="box-img">
                    <div class="overlay">
                        <div class="overlay-content">
                            <i class="fa fa-paw"></i>
                        </div>
                    </div>
                    <%= image_tag pet.photo.url(:wide), class: "lazy" %>
                </div>
            <% end %>
        </div>
    <% end %>
  </div>
<% else %>
    <div class="available-adoptions-link">
        <%= link_to "Mascotas en Adopción", pets_for_adoption_path, :class => "btn btn-success" %>
    </div>
<% end %>

<div class="parallax-home parallax-wrapper">

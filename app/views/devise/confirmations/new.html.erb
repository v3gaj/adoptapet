<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= bootstrap_devise_error_messages! %>
      <div class="page-header">
        <h1>Reenviar las Instrucciones de Confirmación</h1>
      </div>

      <div class="col-lg-6 col-sm-offset-3">
        <div class="panel panel-default devise-bs">
          <div class="panel-heading">
            <h4>Reenviar instrucciones</h4>
          </div>
          <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, role: 'form' }) do |f| %>
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, class: "form-control"  %>
              </div>

              <%= f.submit "Reenviar las instrucciones de confirmación", class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>

        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>

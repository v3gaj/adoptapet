<%= form_for @message, url: contact_path, :html => { :class => "form-horizontal contact col-lg-12", remote: true } do |message_form| %>
  <div class="form-group">
    <div class="col-lg-6">
      <%= message_form.text_field :name, :class => 'form-control form-clear', placeholder: "Nombre...", :required => true %>
    </div>
    <div class="col-lg-6">
      <%= message_form.email_field :email, :class => 'form-control form-clear', placeholder: "Email...", :required => true %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-lg-12">
      <%= message_form.text_area :content, :class => 'form-control form-clear', placeholder: "Mensaje...", rows: 8, :required => true %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="text-center">
      <%= button_tag(type: "submit", class: "btn btn-primary") do %>
        Enviar <i class="fa fa-paper-plane" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
<% end %>
<div class="message_errors">
  
</div>
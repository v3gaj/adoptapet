<% if user %>
  <% if params[:controller] == 'pets' && params[:action] == 'index' %>
    <%= render 'pets/messageLinks', user: user, pet: pet %>
  <% end %>
  <% if params[:controller] == 'users' && params[:action] == 'show' || params[:controller] == 'users' && params[:action] == 'profile' %>
    <%= render 'pets/actionLinks', user: user, pet: pet %>
  <% end %>
<% else %>
    <%= link_to "Quiero esta Mascota!",new_adoption_path(petId: pet.id), :class => 'btn btn-success' %>
<% end %>
<%= form_for([@pet, @post], :html => { :class => "form-horizontal post col-lg-9 col-sm-offset-1" }) do |f| %>

  <% if @post.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Comentario", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :comment, :class => 'form-control', placeholder: "Ingrese la información que deseas compartit sobre tu mascota...", autofocus: true, rows: 8, :required => true %>
    </div>
    <%=f.error_span(:comment) %>
  </div>
  <div class="form-group">
    <%= f.label "Imagen", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :image, :class => 'form-control' %>
    </div>
    <%=f.error_span(:image) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit(@post.new_record? ? "Crear Publicación" : "Guardar Cambios", class: 'btn btn-primary') %>
      <%= link_to "Cancelar",
                pet_path(@pet), :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
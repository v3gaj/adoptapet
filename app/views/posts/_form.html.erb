<%= form_for([@pet, @post], remote: true, :html => { :class => "form-horizontal post col-lg-12 form-post-profile" }) do |f| %>

  <div id="post_errors"></div>

  <div class="form-group">
    <%-# <%= f.label "Comentario", :class => 'control-label col-lg-2' %>
    <div class="col-lg-12">
      <%= f.text_area :comment, :class => 'form-control', placeholder: "Ingrese la información que deseas compartir sobre tu mascota...", rows: 4, :required => true %>
    </div>
    <%=f.error_span(:comment) %>
  </div>
  <div class="form-group">
    <%-# <%= f.label "Imagen", :class => 'control-label col-lg-2' %>
    <div class="col-lg-12">
      <%= f.file_field :image, :class => 'form-control' %>
    </div>
    <%=f.error_span(:image) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-4 col-lg-8">
      <%= f.submit(@post.new_record? ? "Crear Publicación" : "Guardar Cambios", class: 'btn btn-primary update-post-link') %>
      <%-# <%= link_to "Cancelar", pet_path(@pet), :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
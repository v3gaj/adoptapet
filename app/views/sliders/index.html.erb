<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <%- model_class = Slider -%>
            <div class="page-header">
              <h1>Contenido del Slider</h1>
            </div>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th><%= model_class.human_attribute_name(:título) %></th>
                  <th><%= model_class.human_attribute_name(:subtítulo) %></th>
                  <th><%= model_class.human_attribute_name(:botón) %></th>
                  <th><%= model_class.human_attribute_name(:url) %></th>
                  <th><%= model_class.human_attribute_name(:image) %></th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% @sliders.each do |slider| %>
                  <tr>
                    <td><%= slider.title %></td>
                    <td><%= slider.subtitle %></td>
                    <td><%= slider.buttontitle %></td>
                    <td><%= slider.url %></td>
                    <td><%= image_tag slider.image(:normal), :class => 'pet-image' %></td>
                    <td>
                      <%= link_to 'Editar',
                                  edit_slider_path(slider), :class => 'btn btn-default btn-xs' %>
                      <%= link_to 'Eliminar',
                                  slider_path(slider),
                                  :method => :delete,
                                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                  :class => 'btn btn-xs btn-danger' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <%= link_to t('.new', :default => t("helpers.links.new")),
                        new_slider_path,
                        :class => 'btn btn-primary' %>
        </div>
    </div>
</div>
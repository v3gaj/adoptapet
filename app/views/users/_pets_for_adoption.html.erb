<div class="adoption-grid">
  <% obj.each do |pet| %>
    <div class="col-md-4 pet-card-wrapper">
      <div class="pet-adoption">
        <%= link_to image_tag(pet.photo.url(:original)), pet_path(pet) %>
        <div class="pet-info">          
          <h3><%= link_to pet.name.split.map(&:capitalize).join(' '), pet_path(pet) %></h3>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div align="center">
  <%= will_paginate @adoptions, :param_name => 'adoptions_page', :container => {remote: true}, :params => {:action => "pets_for_adoption" }  %>
</div>
